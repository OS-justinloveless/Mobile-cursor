{
  "name": "Swift",
  "scopeName": "source.swift",
  "fileTypes": ["swift"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.swift",
          "match": "//.*$"
        },
        {
          "name": "comment.block.swift",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.swift",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.swift",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.swift",
              "begin": "\\\\\\(",
              "end": "\\)"
            }
          ]
        },
        {
          "name": "string.quoted.triple.swift",
          "begin": "\"\"\"",
          "end": "\"\"\""
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.swift",
          "match": "\\b(if|else|guard|switch|case|default|for|while|repeat|do|break|continue|fallthrough|return|throw|try|catch|defer|where|in)\\b"
        },
        {
          "name": "keyword.declaration.swift",
          "match": "\\b(import|let|var|func|class|struct|enum|protocol|extension|typealias|associatedtype|init|deinit|subscript|operator|precedencegroup|actor|async|await|nonisolated|isolated|macro)\\b"
        },
        {
          "name": "keyword.modifier.swift",
          "match": "\\b(public|private|internal|fileprivate|open|static|final|override|mutating|nonmutating|convenience|required|optional|lazy|dynamic|weak|unowned|inout|some|any|consuming|borrowing)\\b"
        },
        {
          "name": "constant.language.swift",
          "match": "\\b(true|false|nil|self|Self|super)\\b"
        },
        {
          "name": "keyword.reserved.swift",
          "match": "\\b(as|is|throws|rethrows|get|set|willSet|didSet|infix|prefix|postfix|indirect|@\\w+)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.swift",
          "match": "\\b(Int|Int8|Int16|Int32|Int64|UInt|UInt8|UInt16|UInt32|UInt64|Float|Double|Bool|String|Character|Array|Dictionary|Set|Optional|Result|Never|Void|Any|AnyObject|Error|Codable|Encodable|Decodable|Hashable|Equatable|Comparable|Identifiable|Sendable)\\b"
        },
        {
          "name": "entity.name.type.swift",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.swift",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.swift",
          "match": "\\b(0x[0-9a-fA-F_]+|0o[0-7_]+|0b[01_]+|[0-9][0-9_]*(\\.[0-9_]+)?([eE][+-]?[0-9_]+)?)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.swift",
          "match": "[+\\-*/%=<>!&|^~?:]+"
        }
      ]
    }
  }
}
