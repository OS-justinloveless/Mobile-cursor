{
  "name": "Ruby",
  "scopeName": "source.ruby",
  "fileTypes": ["rb", "rake", "gemspec", "ru", "erb"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#regex" },
    { "include": "#keywords" },
    { "include": "#symbols" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.ruby",
          "match": "#.*$"
        },
        {
          "name": "comment.block.ruby",
          "begin": "^=begin",
          "end": "^=end"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ruby",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ruby",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.ruby",
              "begin": "#\\{",
              "end": "\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.ruby",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ruby",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.heredoc.ruby",
          "begin": "<<[-~]?(\\w+)",
          "end": "^\\s*\\1$"
        }
      ]
    },
    "regex": {
      "patterns": [
        {
          "name": "string.regexp.ruby",
          "begin": "/(?!/)",
          "end": "/[imxouesn]*",
          "patterns": [
            {
              "name": "constant.character.escape.ruby",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.other.symbol.ruby",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*[?!]?"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ruby",
          "match": "\\b(if|elsif|else|unless|case|when|while|until|for|break|next|redo|retry|return|begin|rescue|ensure|raise|throw|catch|then|do|end|in)\\b"
        },
        {
          "name": "keyword.declaration.ruby",
          "match": "\\b(def|class|module|attr_reader|attr_writer|attr_accessor|alias|undef|include|extend|prepend|require|require_relative|load)\\b"
        },
        {
          "name": "constant.language.ruby",
          "match": "\\b(true|false|nil|self|super|__FILE__|__LINE__|__ENCODING__|__dir__|__method__|__callee__)\\b"
        },
        {
          "name": "keyword.operator.ruby",
          "match": "\\b(and|or|not|defined\\?|yield)\\b"
        },
        {
          "name": "keyword.modifier.ruby",
          "match": "\\b(public|private|protected)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ruby",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*[?!]?)\\s*(?=\\(|\\s+(?!do|if|unless|while|until|and|or)\\w)"
        },
        {
          "name": "variable.other.ruby",
          "match": "@{1,2}[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.global.ruby",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ruby",
          "match": "\\b(0x[0-9a-fA-F_]+|0o[0-7_]+|0b[01_]+|[0-9][0-9_]*(\\.[0-9_]+)?([eE][+-]?[0-9_]+)?i?|[0-9]+r)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.ruby",
          "match": "[+\\-*/%=<>!&|^~?:]+|=>|<=>|\\.\\.|\\.\\.\\."
        }
      ]
    }
  }
}
