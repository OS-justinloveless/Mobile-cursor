{
  "name": "TypeScript",
  "scopeName": "source.ts",
  "fileTypes": ["ts", "tsx", "mts", "cts"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#regex" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ts",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ts",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ts",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ts",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.ts",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ts",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.ts",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.embedded.ts",
              "begin": "\\$\\{",
              "end": "\\}"
            }
          ]
        }
      ]
    },
    "regex": {
      "patterns": [
        {
          "name": "string.regexp.ts",
          "match": "(?<=[=(:,\\[!&|?]|^|return|case)\\s*/(?![/*])(?:[^/\\\\\\n]|\\\\.)+/[gimsuvy]*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ts",
          "match": "\\b(if|else|switch|case|default|for|while|do|break|continue|return|throw|try|catch|finally|with|debugger|yield|await)\\b"
        },
        {
          "name": "keyword.declaration.ts",
          "match": "\\b(var|let|const|function|class|extends|implements|import|export|from|as|default|async|static|get|set|namespace|module|declare|abstract|readonly|override|satisfies)\\b"
        },
        {
          "name": "constant.language.ts",
          "match": "\\b(true|false|null|undefined|NaN|Infinity|this|super|arguments)\\b"
        },
        {
          "name": "keyword.operator.ts",
          "match": "\\b(new|delete|typeof|instanceof|in|of|void|keyof|infer|is|asserts)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.ts",
          "match": "\\b(string|number|boolean|symbol|bigint|object|unknown|never|void|any|null|undefined|Array|Promise|Record|Partial|Required|Readonly|Pick|Omit|Exclude|Extract|NonNullable|ReturnType|Parameters|ConstructorParameters|InstanceType|ThisType|Awaited)\\b"
        },
        {
          "name": "keyword.type.ts",
          "match": "\\b(type|interface|enum)\\b"
        },
        {
          "name": "entity.name.type.ts",
          "match": "(?<=:\\s*|<|,\\s*|extends\\s+|implements\\s+)\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ts",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ts",
          "match": "\\b(0x[0-9a-fA-F]+|0o[0-7]+|0b[01]+|[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?n?)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.ts",
          "match": "[+\\-*/%=<>!&|^~?:]+|=>|\\.\\.\\.?"
        }
      ]
    }
  }
}
