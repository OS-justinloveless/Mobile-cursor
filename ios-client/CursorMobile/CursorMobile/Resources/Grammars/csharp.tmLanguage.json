{
  "name": "C#",
  "scopeName": "source.cs",
  "fileTypes": ["cs", "csx"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cs",
          "match": "//.*$"
        },
        {
          "name": "comment.block.cs",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.block.documentation.cs",
          "begin": "///",
          "end": "$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.verbatim.cs",
          "begin": "@\"",
          "end": "\""
        },
        {
          "name": "string.interpolated.cs",
          "begin": "\\$\"",
          "end": "\"",
          "patterns": [
            {
              "name": "meta.embedded.cs",
              "begin": "\\{",
              "end": "\\}"
            }
          ]
        },
        {
          "name": "string.quoted.double.cs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cs",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.cs",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cs",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cs",
          "match": "\\b(if|else|switch|case|default|for|foreach|while|do|break|continue|return|throw|try|catch|finally|goto|yield|lock|using|checked|unchecked|when)\\b"
        },
        {
          "name": "keyword.declaration.cs",
          "match": "\\b(class|struct|interface|enum|record|delegate|event|namespace|using|var|const|readonly|volatile|extern|static|virtual|abstract|override|sealed|partial|async|await|get|set|init|add|remove|value|where|new)\\b"
        },
        {
          "name": "keyword.modifier.cs",
          "match": "\\b(public|private|protected|internal|file|ref|out|in|params|required)\\b"
        },
        {
          "name": "constant.language.cs",
          "match": "\\b(true|false|null|this|base|default|nameof|sizeof|typeof)\\b"
        },
        {
          "name": "keyword.operator.cs",
          "match": "\\b(is|as|new|stackalloc|with)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.cs",
          "match": "\\b(void|bool|byte|sbyte|char|short|ushort|int|uint|long|ulong|float|double|decimal|string|object|dynamic|nint|nuint)\\b"
        },
        {
          "name": "support.class.cs",
          "match": "\\b(String|Int32|Int64|Boolean|Object|Array|List|Dictionary|Task|Action|Func|Exception|Console|Math|DateTime|TimeSpan|Guid|Nullable|Span|Memory|IEnumerable|ICollection|IList|IDictionary|IDisposable|IAsyncDisposable)\\b"
        },
        {
          "name": "entity.name.type.cs",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.cs",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.cs",
          "match": "\\b(0x[0-9a-fA-F_]+|0b[01_]+|[0-9][0-9_]*(\\.[0-9_]+)?([eE][+-]?[0-9_]+)?[fFdDmMuUlL]*)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.cs",
          "match": "[+\\-*/%=<>!&|^~?:]+|=>|\\?\\.?|\\?\\?"
        }
      ]
    }
  }
}
